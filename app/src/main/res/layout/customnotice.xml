<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notice"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#37383D"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/notigication_album"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/album" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:paddingLeft="9dp"
            android:paddingRight="9dp">

            <TextView
                android:id="@+id/notigication_songName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:text="未知"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/notigication_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="未知"
                android:textColor="#A0A0A0"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notigication_pre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/notigication_pre" />

            <ImageView
                android:id="@+id/notigication_playorpaues"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/notigication_pause" />

            <ImageView
                android:id="@+id/notigication_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/notigication_next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>